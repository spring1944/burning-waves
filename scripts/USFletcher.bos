	{
		corpsetype = 1;
		turn hull to x-axis (0-HULL_LIST_ANGLE_X) speed HULL_LIST_SPEED;
		turn hull to z-axis (0-HULL_LIST_ANGLE_Z) speed HULL_LIST_SPEED;
